
<%= link_to "Chatroom", chatrooms_path, class: "item" %>

  <a class="item">
      Messages
  </a>
  <div class="right menu">
  
  
  <% if logged_in? %>
  
    <div class="ui dropdown item">
    
      <%= current_user.username %> <i class="dropdown icon"></i>
      <div class="menu">
          <%= link_to "Logout", logout_path, method: :delete, class: "item" %>
      </div>
    
    </div> 
    
  <% else %>

    <div class="item">
        <%= link_to "Sign in", login_path, class: "ui primary button" %>
    </div>
    
  <% end %>
  
</div>