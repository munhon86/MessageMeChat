<%= form_for :session, html: { class: "ui form", role: "form" }, url: login_path do |f| %>

    <div class="field">
      <%= f.label :username %>
      <div class="ui left icon input">
        <%= f.text_field :username, placeholder: "Enter username" %>
        <i class="user icon"></i>
      </div>
    </div>
    
    <div class="field">
      <%= f.label :password %>
      <div class="ui left icon input">
        <%= f.password_field :password, placeholder: "Enter password" %>
        <i class="lock icon"></i>
      </div>
    </div>
    
    <div>
      <%= f.submit "Login", class: "ui blue submit button" %>
    </div>

<% end %>